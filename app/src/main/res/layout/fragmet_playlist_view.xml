<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".playlists.ui.fragment.CreatePlaylistFragment"
    android:layout_marginHorizontal="4dp">
    <ImageView
        android:id="@+id/playlistImage"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:contentDescription="@string/coverPlaylist"
        android:src="@drawable/no_playlist_cover"
        tools:ignore="MissingConstraints"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        />

    <TextView
        android:id="@+id/playlistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        tools:text=""
        android:textColor="@color/playlistEditText"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/playlistImage"/>

    <TextView
        android:id="@+id/countTracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:textFontWeight="400"
        android:fontFamily="@font/ys_display_regular"
        tools:text=""
        android:textColor="@color/playlistEditText"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/playlistName"/>

</androidx.constraintlayout.widget.ConstraintLayout>