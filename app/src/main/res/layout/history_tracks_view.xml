<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundSettings"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="@string/youSearch"
        android:textColor="@color/textSettingsColor"
        android:textFontWeight="500"
        android:textSize="19sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyTrackList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="13dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/clearHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/refreshButtonBackground"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/cleanHistory"
        android:textColor="@color/clearButtonText"
        android:textFontWeight="500"
        android:textSize="14sp" />

</LinearLayout>